<Page x:Class="OpenLibre.Paginas.PaginaDaAplicacao"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:OpenLibre.Paginas"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="300"
      Title="PaginaDaAplicacao">
    <Border Background="Orange">
        <Grid>

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Border CornerRadius="10" Background="#ffffff" Grid.Column="0">
                <StackPanel>
                    <Button Margin="-1,0,-84,0" Height="35" Command="">Hello</Button>
                </StackPanel>
            </Border>
        </Grid>
    </Border>
</Page>
